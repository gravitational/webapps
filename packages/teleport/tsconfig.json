{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "es6",
    "paths": {
      "design": [
        "../../design/src"
      ],
      "design/*": [
        "../../design/src/*"
      ],
      "e-teleport/*": [
        "../../webapps.e/teleport/src/*"
      ],
      "shared/*": [
        "../../shared/*"
      ],
      "teleport": [
        "../../teleport/src"
      ],
      "teleport/*": [
        "../../teleport/src/*"
      ],
      "teleterm/*": [
        "../../teleterm/src/*"
      ],
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
}
