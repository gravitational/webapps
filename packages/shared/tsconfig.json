{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "esnext",
    "types": [
      "node",
      "@emotion/core"
    ],
    "paths": {
      "design": [
        "../../design/src"
      ],
      "design/*": [
        "../../design/src/*"
      ],
      "e-teleport/*": [
        "../../webapps.e/teleport/src/*"
      ],
      "shared/*": [
        "../../shared/*"
      ],
      "teleport": [
        "../../teleport/src"
      ],
      "teleport/*": [
        "../../teleport/src/*"
      ],
      "teleterm/*": [
        "../../teleterm/src/*"
      ],
    }
  }
}
