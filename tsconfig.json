{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "pretty": true,
    "sourceMap": true,
    "stripInternal": true,
    "target": "esnext",
    "types": [
      "node",
      "@emotion/core"
    ],
    "paths": {
      "grpc": [
        "node_modules/@grpc/grpc-js"
      ], // generator still uses "grpc" package that has been deprecated in favor of "@grpc/grpc-js"
      "shared/*": [
        "packages/shared/*"
      ],
      "design/*": [
        "packages/design/src/*"
      ],
      "design": [
        "packages/design/src/"
      ],
      "teleport/*": [
        "packages/teleport/src/*"
      ],
      "teleport": [
        "packages/teleport/src/"
      ],
      "teleterm/*": [
        "packages/teleterm/src/*"
      ],
      "e-teleport/*": [
        "packages/webapps.e/teleport/src/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "dist",
    "**/dist/*",
    "**/build/app/**",
    "**/build/release/**"
  ]
}
